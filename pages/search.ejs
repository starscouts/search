<%- include('../partials/header.ejs') %>

<nav class="container" style="margin-top: 20px; margin-bottom: 20px;">
    <a href="/" style="text-decoration: none;"><img src="https://equestria.dev/assets/brand/Wing/Coloured/WingColoured.svg" alt="Equestria.dev Search" style="width: 32px; height: 32px;"></a><form action="/" style="display: inline-block;"><input value="<%- req.query['q'] %>" autocomplete="off" class="form-control" placeholder="Search the web..." name="q" style="width: 640px; max-width: 100%; margin-left: 20px;"></form>
</nav>

<hr>

<div class="container">
    <% for (let result of data.hits) { %>
        <a href="<%- result.url %>" class="result" style="border: 1px solid transparent; border-radius: 10px; padding: 10px; margin: -10px -10px 10px 42px;max-width: 640px; color: black; text-decoration: none; display: block;">
            <div class="result-url" style="text-overflow: ellipsis; white-space: nowrap; overflow: hidden;font-size: 16px; color: rgba(0, 0, 0, .75);"><%- result.url %></div>
            <div class="result-title" style="text-overflow: ellipsis; white-space: nowrap; overflow: hidden;font-size: 22px; color: #1439bd;"><%- result.title %></div>
            <div class="result-description" style="font-size: 14px; color: rgba(0, 0, 0, .65);"><%- result.description %></div>
        </a>
    <% } %>
</div>

<style>
    .result:hover {
        border-color: rgba(0, 0, 0, .1) !important;
        background-color: rgba(0, 0, 0, .01) !important;
    }

    .result:active {
        border-color: rgba(0, 0, 0, .15) !important;
        background-color: rgba(0, 0, 0, .015) !important;
    }
</style>

<hr>
<img src="/assets/algolia.png" style="height: 32px; filter: invert(1) !important; display: block; margin-left: auto; margin-right: auto;" alt="Algolia">

<div style="margin-bottom: 50px;"></div>

<%- include('../partials/footer.ejs') %>